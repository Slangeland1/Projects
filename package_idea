## :::::::::::::::::::: Set Up Standard Code Template:


R_script_template <- print(c(
"## :::::::::::::::::::: File Info:",
"## Date:",
"## Author:",
"## File-Name:",
"## Version:",
"## Previous Versions/Files:",
"## Dependencies:",
"## Purpose:",
"## Input Files:",
"## Output Files:",
"## Data Output:",
"## Required by:",
"## Status:",
"## Machine:",
"## R version:",
"\n",
"\n",
"## :::::::::::::::::::: <HEADER 1>:",
"rm(list = ls(all = TRUE)) ## cleans the work space",
"\n",
"## :::::::::: <HEADER 2>:",
"\n",
"## ::::: <HEADER 3>:",
"\n",
"\n"
)
)

setwd(path_code)
write(R_script_template,
      file = "R_script_template.R")


