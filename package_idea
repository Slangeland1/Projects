## :::::::::::::::::::: Set Up Folder Structure:
## :::::::::: Master Folder:
path <- "H:/GOSR-Research and Strategic Analysis/R Tutorials/master_folder"
dir.create(path)
setwd(path)

## :::::::::: Subfolders:
## ::::: Code:
dir.create(
  paste0(
    path,
    "/code"
  )
)

path_code <- paste0(
  path,
  "/code"
)

path_code

dir.create(
  paste0(
    path,
    "/code/outdated"
  )
)

path_code_outdated <- paste0(
  path,
  "/code/outdated"
)

path_code_outdated


## ::::: Reports:
dir.create(
  paste0(
    path,
    "/reports"
  )
)

